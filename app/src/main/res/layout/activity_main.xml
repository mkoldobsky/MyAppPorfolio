<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">


    <TextView
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:textAlignment="center" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotifyButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:onClick="showSpotifyMessage"
        android:background="#F08C35"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoresButton"
        android:layout_below="@+id/spotifyButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:onClick="showScoresMessage"
        android:background="#F08C35"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryButton"
        android:layout_below="@+id/scoresButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:onClick="showLibraryMessage"
        android:background="#F08C35"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildButton"
        android:layout_below="@+id/libraryButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:onClick="showBuildMessage"
        android:background="#F08C35"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/readerButton"
        android:layout_below="@+id/buildButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:onClick="showReaderMessage"
        android:background="#F08C35"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />

    <Button
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/readerButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:onClick="showCapstoneMessage"
        android:background="#cc003c"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px" />


</RelativeLayout>
